@model IEnumerable<WebApplication1.Models.Picture>

@{
    ViewData["Title"] = "Index2";
}

<h1>Index2</h1>
<form asp-action="FindByHash" asp-controller="Home" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <input type="text" name="findByHash" class="form-control" />
        <input type="submit" value="Поиск по тегу" />
    </div>
</form>

<h3>Выберите файл для загрузки</h3>
<form asp-action="AddFile" asp-controller="Home" method="post" enctype="multipart/form-data">
    <input type="file" name="uploadedFile" /><br>
    <input type="submit" value="Загрузить" />
    @Html.ActionLink("Добавить Хеш на фото", "addHash", "Home");
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Path)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <p><img src="@Url.Content(item.Path)" style="width:300px; height:300px"></p>
                    @foreach (Hash h in item.hash)
                    {
                        <p>@Url.Content(h.Name)</p>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>
